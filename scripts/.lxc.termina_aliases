## lxc/lxd aliases
 alias lls='lxc list'
 alias lil='lxc image list'
 alias lf='lxc info '
 alias lpush='lxc file push '
 alias lpull='lxc file pull '
 alias lrst='lxc restart '
 alias lsnap='lxc snapshot '
 alias lsp='lxc stop '
 alias lst='lxc start '
 alias lx='lxc exec '
 alias rc='run_container.sh '
 alias denny="run_container.sh --user=denny --shell --container_name=$1"
 alias tickmc="run_container.sh --user=tickmc --shell --container_name=$1"
 alias mr.u='run_container.sh --container_name=MrUrbanity --user=denny --shell'
